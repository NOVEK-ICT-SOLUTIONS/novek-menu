    "cors": "^2.8.5",
    "helmet": "^8.0.0",
    "compression": "^1.7.5",
    "dotenv": "^16.4.7",
    "zod": "^3.24.1",
    "@novek-menus/shared": "*",
    "@novek-menus/config": "*"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3"
